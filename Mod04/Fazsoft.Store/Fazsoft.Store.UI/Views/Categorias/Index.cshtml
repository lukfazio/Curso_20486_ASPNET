@model IEnumerable<CategoriaIndexVM>
@{
    ViewBag.Title = "Listagem de Categorias";
    ViewBag.SubTitle = "Listagem de Categorias Cadastados no Sistema!!";

}


<div>
    <a asp-controller="Categorias" asp-action="AddEdit" class="btn btn-outline-secondary">Adicionar Categoria</a>
</div>

<div>
    <table class="table  table-striped table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Data de Cadastro</th>
                <th>Quantidade Produtos</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="item-@item.Id">
                    <td>@item.Nome</td>
                    <td>@item.DataCadastro.ToShortDateString()</td>
                    <td>@item.QtddProdutos</td>
                    <td>
                        <a class="btn btn-outline-success btn-sm" asp-action="AddEdit" asp-controller="Categorias" asp-route-id="@item.Id">Editar</a>
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="excluir(@item.Id, '@item.Nome', 'Categoria', '@Url.Action("Excluir","Categorias")')">Excluir</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<partial name="_modalDel">


    @section scripts{
        <script src="~/js/dell-modal.js"></script>
    }
