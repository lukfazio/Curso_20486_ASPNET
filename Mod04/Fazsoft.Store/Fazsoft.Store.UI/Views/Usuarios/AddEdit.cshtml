@model UsuarioAddEditVM
@{
    int id = Convert.ToInt32(ViewContext.RouteData.Values["id"]);

    ViewBag.Title = (id == 0 ? "Adicionar" : "Editar");
    ViewBag.SubTitle = (id == 0 ? "Adicionar Novo Usuario" : $"Editar Usuario {id}");
}

<form method="post">
    <div class="mb-3">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" autofocus />
        <span asp-validation-for="Nome" class="invalid"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="invalid"></span>
    </div>

    <div class="col mb-3">
        <label asp-for="Genero" class="form-label">Genero</label>
        <select asp-for="Genero" asp-items="Model.Generos" class="form-select">
            <option value="">Selecione...</option>
        </select>
        <span asp-validation-for="Genero" class="invalid"></span>
    </div>

    <div class="col mb-3">
        <label asp-for="PerfisId" class="form-label">Perfis</label>
        <select asp-for="PerfisId" asp-items="Model.Perfis" class="form-select">
        </select>
        <span asp-validation-for="PerfisId" class="invalid"></span>
    </div>

    @if (id == 0)
    {
        <div class="row mb-3">
            <div class="col mb-3">
                <label asp-for="Senha" class="form-label">Senha</label>
                <input asp-for="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="invalid"></span>
            </div>

            <div class="col mb-3">
                <label asp-for="ConfirmacaoSenha" class="form-label">Confirmacao Senha</label>
                <input asp-for="ConfirmacaoSenha" class="form-control" type="password" />
                <span asp-validation-for="ConfirmacaoSenha" class="invalid"></span>
            </div>
        </div>
    }
    else
    {
        <input asp-for="Senha" class="form-control" type="hidden" />
        <input asp-for="ConfirmacaoSenha" class="form-control" type="hidden" />
    }


    <div>
        <a class="btn btn-outline-warning" asp-action="Index" asp-controller="Usuarios">Voltar</a>
        <button class="btn btn-outline-secondary" type="submit">Salvar</button>
    </div>
</form>

@section scripts {
    <partial name="_ScriptsValidate">
}
